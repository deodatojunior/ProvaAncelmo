@model ProvaAncelmo.Models.ProdutoViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Certeza que deseja remover este produto?</h1>

<div>
    <h4>ProdutoViewModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.codigoProduto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.codigoProduto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.preco)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.preco)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.categoria)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.categoria)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.observacao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.observacao)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Remover" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar a listagem de produtos</a>
    </form>
</div>
